{
    "dataloader": {
        "type": "torch.utils.data.DataLoader",
        "params": {
            "dataset": {
                "type": "colorization.data.standard_dataset.StandardDataset",
                "params": {
                    "root": ["path", "../data/stanford_dogs"],
                    "transform": {
                        "type": "torchvision.transforms.Compose",
                        "params": {
                            "transforms": [
                                {
                                    "type": "torchvision.transforms.RandomCrop",
                                    "params": {
                                        "size": 176
                                    }
                                },
                                {
                                   "type": "torchvision.transforms.RandomHorizontalFlip"
                                }
                            ]
                        }
                    }
                }
             },
            "batch_size": 40,
            "drop_last": true,
            "shuffle": true,
            "num_workers": 4,
            "pin_memory": true
        }
    },
    "model": {
        "type": "colorization.colorization_model.ColorizationModel",
        "params": {
            "network": {
                "type": "colorization.modules.colorization_network.ColorizationNetwork",
                "params": {
                    "class_rebal_lambda": 0.5
                }
            },
            "loss": {
                "type": "colorization.modules.cross_entropy_loss_2d.CrossEntropyLoss2d"
            },
            "optimizer": {
                "type": "torch.optim.Adam",
                "params": {
                    "lr": 3.16e-5,
                    "betas": [0.9, 0.99],
                    "weight_decay": 1e-3
                }
            },
            "log_config": {
                "version": 1,
                "disable_existing_loggers": false,
                "formatters": {
                    "timestamp": {
                        "format": "%(asctime)s - %(name)s (%(levelname)s): %(message)s"
                    },
                    "no_timestamp": {
                        "format": "%(name)s (%(levelname)s): %(message)s"
                    }
                },
                "handlers": {
                    "stdout": {
                        "level": "INFO",
                        "formatter": "no_timestamp",
                        "class": "logging.StreamHandler",
                        "stream": "ext://sys.stdout"
                    },
                    "file": {
                        "level": "INFO",
                        "formatter": "timestamp",
                        "class": "logging.FileHandler",
                        "filename": ["path", "../log/default.txt"],
                        "mode": "w"
                    }
                 },
                 "loggers": {
                    "training_logger": {
                        "level": "INFO",
                        "handlers": ["stdout", "file"]
                    }
                 }
            },
            "logger": "training_logger"
        }
    },
    "training_args": {
        "iterations": 5000,
        "checkpoint_dir": ["path", "../models/default"],
        "epochs_till_checkpoint": 1
    }
}
